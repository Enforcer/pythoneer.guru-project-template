[project]
name = "{{project_name}}"
version = "0.0.0"
description = "{{project_description}}"
readme = "README.md"
requires-python = ">=3.13"
dependencies = []

[tool.uv]
dev-dependencies = [
    "mypy",
    "pytest",
    "pytest-cov",
    "ruff",
    "tach",
]

[tool.mypy]
strict = true

[tool.ruff.lint]
extend-select = ["I", "S"]

[tool.ruff.lint.per-file-ignores]
"**/test_*.py" = ["S101"]

